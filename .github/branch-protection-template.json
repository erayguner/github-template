{
  "name": "Branch Protection Template - Industry Standards 2025",
  "description": "DevSecOps compliant branch protection settings following industry standards",
  "settings": {
    "required_status_checks": {
      "strict": true,
      "contexts": [
        "Pre-commit Validation / pre-commit",
        "CI/CD Pipeline / code-quality",
        "CI/CD Pipeline / terraform-validate",
        "CI/CD Pipeline / terraform-security", 
        "CI/CD Pipeline / python-test",
        "CI/CD Pipeline / python-security",
        "Security Analysis / codeql",
        "Security Analysis / dependency-review",
        "Security Analysis / secret-scanning",
        "Dependency Management & Supply Chain Security / dependency-analysis",
        "Dependency Management & Supply Chain Security / vulnerability-scanning",
        "Performance Monitoring / python-performance",
        "Performance Monitoring / terraform-performance"
      ]
    },
    "enforce_admins": false,
    "required_pull_request_reviews": {
      "required_approving_review_count": 1,
      "dismiss_stale_reviews": true,
      "require_code_owner_reviews": true,
      "require_last_push_approval": true,
      "bypass_pull_request_allowances": {
        "users": [],
        "teams": ["security-team", "admin-team"],
        "apps": ["dependabot[bot]", "github-actions[bot]"]
      }
    },
    "restrictions": null,
    "required_linear_history": true,
    "allow_force_pushes": false,
    "allow_deletions": false,
    "block_creations": false,
    "required_conversation_resolution": true,
    "lock_branch": false,
    "allow_fork_syncing": true,
    "require_signed_commits": true,
    "require_deployments_to_succeed": true
  },
  "instructions": {
    "setup": [
      "1. Navigate to your repository Settings",
      "2. Go to Branches section", 
      "3. Click 'Add rule' for your main branch",
      "4. Apply the settings from this template",
      "5. Customize team/user names as needed"
    ],
    "customization": {
      "required_approving_review_count": "Adjust based on team size (1-3 recommended)",
      "contexts": "Update based on your actual CI/CD job names",
      "teams": "Replace with your actual GitHub team names",
      "users": "Replace with actual admin usernames"
    }
  }
}