{
  "name": "Branch Protection Template",
  "description": "Recommended branch protection settings for secure development",
  "settings": {
    "required_status_checks": {
      "strict": true,
      "contexts": [
        "ci/code-quality",
        "ci/security-analysis", 
        "ci/tests",
        "ci/terraform-validate",
        "ci/python-test"
      ]
    },
    "enforce_admins": true,
    "required_pull_request_reviews": {
      "required_approving_review_count": 2,
      "dismiss_stale_reviews": true,
      "require_code_owner_reviews": true,
      "require_last_push_approval": true,
      "bypass_pull_request_allowances": {
        "users": [],
        "teams": ["security-team"],
        "apps": ["dependabot"]
      }
    },
    "restrictions": {
      "users": ["admin-user"],
      "teams": ["core-team", "security-team"],
      "apps": []
    },
    "required_linear_history": true,
    "allow_force_pushes": false,
    "allow_deletions": false,
    "block_creations": false,
    "required_conversation_resolution": true,
    "lock_branch": false,
    "allow_fork_syncing": true
  },
  "instructions": {
    "setup": [
      "1. Navigate to your repository Settings",
      "2. Go to Branches section", 
      "3. Click 'Add rule' for your main branch",
      "4. Apply the settings from this template",
      "5. Customize team/user names as needed"
    ],
    "customization": {
      "required_approving_review_count": "Adjust based on team size (1-3 recommended)",
      "contexts": "Update based on your actual CI/CD job names",
      "teams": "Replace with your actual GitHub team names",
      "users": "Replace with actual admin usernames"
    }
  }
}