# Application Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit the actual .env file to version control!

# ============================================================================
# Application Settings
# ============================================================================

# Environment: dev, staging, or prod
ENVIRONMENT=dev

# Enable debug mode (set to "true" for development)
DEBUG=true

# Application secret key (generate a secure random string for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Application name
APP_NAME=example-python-project

# Application version
APP_VERSION=0.1.0

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# Log file path (leave empty to log to stdout only)
LOG_FILE=

# ============================================================================
# Database Configuration (if using a database)
# ============================================================================

# Database URL
# PostgreSQL: postgresql://user:password@localhost:5432/dbname
# MySQL: mysql://user:password@localhost:3306/dbname
# SQLite: sqlite:///./database.db
# DATABASE_URL=sqlite:///./dev.db

# Database pool size
# DB_POOL_SIZE=5

# Database timeout (seconds)
# DB_TIMEOUT=30

# ============================================================================
# API Configuration (if using external APIs)
# ============================================================================

# API base URL
# API_BASE_URL=https://api.example.com

# API key
# API_KEY=your-api-key-here

# API timeout (seconds)
# API_TIMEOUT=30

# API rate limit (requests per minute)
# API_RATE_LIMIT=60

# ============================================================================
# Redis Configuration (if using Redis)
# ============================================================================

# Redis URL
# REDIS_URL=redis://localhost:6379/0

# Redis password
# REDIS_PASSWORD=

# Redis database number
# REDIS_DB=0

# ============================================================================
# Email Configuration (if using email)
# ============================================================================

# SMTP server
# SMTP_HOST=smtp.gmail.com

# SMTP port
# SMTP_PORT=587

# SMTP username
# SMTP_USER=your-email@example.com

# SMTP password
# SMTP_PASSWORD=your-password

# Email sender address
# EMAIL_FROM=noreply@example.com

# ============================================================================
# AWS Configuration (if using AWS services)
# ============================================================================

# AWS region
# AWS_REGION=us-west-2

# AWS access key ID
# AWS_ACCESS_KEY_ID=your-access-key-id

# AWS secret access key
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 bucket name
# AWS_S3_BUCKET=your-bucket-name

# ============================================================================
# GCP Configuration (if using GCP services)
# ============================================================================

# GCP project ID
# GCP_PROJECT_ID=your-project-id

# GCP credentials file path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# GCS bucket name
# GCS_BUCKET=your-bucket-name

# ============================================================================
# Security Settings
# ============================================================================

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://example.com

# Rate limiting (requests per minute per IP)
# RATE_LIMIT=100

# Session timeout (seconds)
# SESSION_TIMEOUT=3600

# ============================================================================
# Feature Flags
# ============================================================================

# Enable specific features
# FEATURE_ANALYTICS=true
# FEATURE_NOTIFICATIONS=false
# FEATURE_BETA=false

# ============================================================================
# Testing Configuration
# ============================================================================

# Test database URL (used during testing)
# TEST_DATABASE_URL=sqlite:///./test.db

# Enable test mode
# TEST_MODE=false

# ============================================================================
# Development Tools
# ============================================================================

# Enable profiling
# ENABLE_PROFILING=false

# Enable SQL query logging
# LOG_SQL_QUERIES=false

# Enable API request/response logging
# LOG_API_CALLS=false
